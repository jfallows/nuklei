property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceInitial ${nuklei.streams("http", "source")}
property sourceReply ${nuklei.streams("source", "http#source")}

connect await ROUTED
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceInitial.buffer)}
        option writer ${agrona:oneToOneWriter(sourceReply.buffer)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceId)
read ([0..8]:sourceRef)
read ([0..8]:sourceReplyId)
read ([0..8]:sourceReplyRef)

write [0x00 0x00 0x00 0x01]
write ${sourceReplyId}
write ${sourceReplyRef}
write ${sourceId}
write ${sourceRef}
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceId}
read [0..1]
read "GET / " /(?!(?:HTTP\/1\.1))/


write [0x00 0x00 0x00 0x02]
write ${sourceReplyId}
write [0x29]
write "HTTP/1.1 505 HTTP Version Not Supported\r\n"
write flush
