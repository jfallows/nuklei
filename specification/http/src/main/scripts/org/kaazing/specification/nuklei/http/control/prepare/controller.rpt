# external newSourceRef

property nukleiC3C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlC3C ${nukleiC3C.control("http")}

connect agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(controlC3C.controller)}
        option writer ${agrona:manyToOneWriter(controlC3C.nukleus)}

connected

write [0x00 0x00 0x00 0x03]
write ${controlC3C.nextCorrelationId()}
write flush

read [0x40 0x00 0x00 0x03]
read ${controlC3C.correlationId()}
read ([0..8]:newSourceRef)

close
closed

read notify ROUTABLE
