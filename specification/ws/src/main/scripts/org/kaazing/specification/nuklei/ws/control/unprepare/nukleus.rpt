property nukleiC4N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlC4N ${nukleiC4N.controlNew("ws")}

connect await ROUTABLE
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(controlC4N.nukleus)}
        option writer ${agrona:broadcastTransmitter(controlC4N.controller)}

connected

read [0x00 0x00 0x00 0x04]
read ([0..8]:correlationIdC4N)
read ([0..8]:sourceRefC4N)

write [0x40 0x00 0x00 0x04]
write ${correlationIdC4N}
write ${sourceRefC4N}
write flush

close
closed
