property newSourceRef ${nuklei:newInitialRef()} # external scope

property nuklei = ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)};

property sourceInitial ${nuklei.streams("ws", "source")}
property sourceReply ${nuklei.streams("reply", "ws#target")}

property newSourceId ${nuklei:newStreamId()}
property newSourceReplyRef ${nuklei:newReplyRef()}
property newSourceReplyId ${nuklei:newStreamId()}

property newKey ${ws:handshakeKey()}
property writeMask ${ws:randomBytes(4)}
property client125 ${ws:randomBytes(125)}

connect await ROUTED
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(sourceReply.buffer)}
        option writer ${agrona:manyToOneWriter(sourceInitial.buffer)}
connected

write [0x00 0x00 0x00 0x01]
write ${newSourceId}
write ${newSourceRef}
write ${newSourceReplyId}
write ${newSourceReplyRef}
write [0x00] [0x07] ":scheme" [0x04] "http"
write [0x00] [0x07] ":method" [0x03] "GET"
write [0x00] [0x05] ":path" [0x05] "/echo"
write [0x00] [0x04] "host" [0x0e] "localhost:8080"
write [0x00] [0x07] "upgrade" [0x09] "websocket"
write [0x00] [0x0a] "connection" [0x07] "upgrade"
write [0x00] [0x11] "sec-websocket-key" [0x18] ${newKey}
write [0x00] [0x15] "sec-websocket-version" [0x02] "13"
write flush

read [0x00 0x00 0x00 0x01]
read ${newSourceReplyId}
read ${newSourceReplyRef}
read ${newSourceId}
read ${newSourceRef}
read [0x00] [0x07] ":status" [0x03] "101"
read [0x00] [0x07] "upgrade" [0x09] "websocket"
read [0x00] [0x0a] "connection" [0x07] "upgrade"
read [0x00] [0x14] "sec-websocket-accept" [0x1c] ${ws:handshakeHash(newKey)}

write [0x00 0x00 0x00 0x02]
write ${newSourceId}
write [0x83]
write [0x82 0xfd] ${writeMask}
write option mask ${writeMask}
write ${client125}
write option mask [0x00 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${newSourceReplyId}
read [0x7f]
read [0x82 0x7d] ${client125}

close
closed
