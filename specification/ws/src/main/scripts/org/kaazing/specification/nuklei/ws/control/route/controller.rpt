property newSourceRef ${nuklei:newInitialRef()} # external scope

property nukleiC11C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlC11C ${nukleiC11C.control("ws")}

property targetRefC11C ${nuklei:newInitialRef()}

connect await ROUTABLE
        agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(controlC11C.controller)}
        option writer ${agrona:manyToOneWriter(controlC11C.nukleus)}

connected

write [0x00 0x00 0x00 0x11]
write ${controlC11C.nextCorrelationId()}
write [0x06] "source"
write ${newSourceRef}
write [0x06] "target"
write ${targetRefC11C}
write [0x05] "reply"
write flush

read [0x40 0x00 0x00 0x11]
read ${controlC11C.correlationId()}
read [0x06] "source"
read ${newSourceRef}
read [0x06] "target"
read ${targetRefC11C}
read [0x05] "reply"

close
closed

read notify ROUTED
