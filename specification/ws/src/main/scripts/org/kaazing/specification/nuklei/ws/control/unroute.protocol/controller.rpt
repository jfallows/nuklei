property newSourceRef ${nuklei:newInitialRef()} # external scope
property newTargetRef ${nuklei:newInitialRef()} # external scope

property nukleiC12CP = ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)};

property controlC12CP ${nukleiC12CP.control("ws")}

connect await ROUTED
        agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(controlC12CP.controller)}
        option writer ${agrona:manyToOneWriter(controlC12CP.nukleus)}

connected

write [0x00 0x00 0x00 0x12]
write ${controlC12CP.nextCorrelationId()}
write [0x06] "source"
write ${newSourceRef}
write [0x06] "target"
write ${newTargetRef}
write [0x05] "reply"
write [0x0c] "sub-protocol"
write flush

read [0x40 0x00 0x00 0x12]
read ${controlC12CP.correlationId()}
read [0x06] "source"
read ${newSourceRef}
read [0x06] "target"
read ${newTargetRef}
read [0x05] "reply"
read [0x0c] "sub-protocol"

close
closed

read notify UNROUTED
