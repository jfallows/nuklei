property nukleiC11NP ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlC11NP ${nukleiC11NP.controlNew("ws")}

connect await ROUTABLE
        agrona://stream/bidirectional
        option reader ${agrona:manyToOneReader(controlC11NP.nukleus)}
        option writer ${agrona:broadcastTransmitter(controlC11NP.controller)}

connected

read [0x00 0x00 0x00 0x11]
read ([0..8]:correlationIdC11NP)
read [0x06] "source"
read ([0..8]:sourceRefC11NP)
read [0x06] "target"
read ([0..8]:targetRefC11NP)
read [0x05] "reply"
read [0x0c] "sub-protocol"

write [0x40 0x00 0x00 0x11]
write ${correlationIdC11NP}
write [0x06] "source"
write ${sourceRefC11NP}
write [0x06] "target"
write ${targetRefC11NP}
write [0x05] "reply"
write [0x0c] "sub-protocol"
write flush

close
closed
